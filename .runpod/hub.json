{
    "title": "Video Translate",
    "description": "GPU-accelerated Video Translation with Whisper and LLMs. Supports streaming subtitles and diarization.",
    "type": "serverless",
    "category": "audio",
    "iconUrl": "https://img.icons8.com/color/48/translation.png",
    "config": {
        "runsOn": "GPU",
        "containerDiskInGb": 20,
        "env": [
            {
                "key": "SERVER_API_KEY",
                "input": {
                    "name": "OpenAI / LLM API Key",
                    "type": "string",
                    "description": "API Key for the translation provider (e.g. OpenAI sk-...).",
                    "required": true
                }
            },
            {
                "key": "SERVER_MODEL",
                "value": "gpt-4o-mini",
                "input": {
                    "name": "Translation Model",
                    "type": "string",
                    "description": "Model to use for translation (e.g. gpt-4o-mini).",
                    "default": "gpt-4o-mini"
                }
            },
            {
                "key": "WHISPER_MODEL",
                "value": "base",
                "input": {
                    "name": "Whisper Model Size",
                    "type": "string",
                    "description": "Model size for transcription (tiny, base, small, medium, large-v3).",
                    "default": "base"
                }
            },
            {
                "key": "ENABLE_DIARIZATION",
                "value": "true",
                "input": {
                    "name": "Enable Diarization",
                    "type": "boolean",
                    "description": "Enable speaker detection (diarization).",
                    "default": true
                }
            },
            {
                "key": "HF_TOKEN",
                "input": {
                    "name": "HuggingFace Token",
                    "type": "string",
                    "description": "Required for NeMo/Pyannote diarization models if strictly authorized (optional for public models).",
                    "required": false
                }
            }
        ]
    }
}