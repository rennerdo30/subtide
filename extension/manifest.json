{
  "manifest_version": 3,
  "default_locale": "en",
  "name": "__MSG_extensionName__",
  "version": "1.0.0",
  "description": "__MSG_extensionDescription__",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabCapture",
    "offscreen"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://youtube.com/*",
    "https://www.twitch.tv/*",
    "https://twitch.tv/*",
    "*://*/*"
  ],
  "background": {
    "service_worker": "src/background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*",
        "https://youtube.com/*"
      ],
      "all_frames": true,
      "js": [
        "src/content/youtube-constants.js",
        "src/content/youtube-status.js",
        "src/content/youtube-subtitles.js",
        "src/content/youtube-styles.js",
        "src/content/youtube-export.js",
        "src/content/youtube-ui.js",
        "src/content/youtube.js"
      ],
      "css": [
        "src/content/styles.css"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://www.twitch.tv/*",
        "https://twitch.tv/*"
      ],
      "js": [
        "src/content/youtube-constants.js",
        "src/content/youtube-status.js",
        "src/content/youtube-subtitles.js",
        "src/content/youtube-styles.js",
        "src/content/youtube-export.js",
        "src/content/twitch.js"
      ],
      "css": [
        "src/content/styles.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}